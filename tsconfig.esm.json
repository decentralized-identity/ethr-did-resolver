{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib.esm",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "lib.commonjs",
    "lib.esm"
  ],
  "include": [
    "src"
  ]
}
